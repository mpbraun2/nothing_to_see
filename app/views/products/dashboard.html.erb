    <thead>
    <tr>
        <th>Product</th>
        <th>Date Bought</th>
        <th>Buyer</th>
        <th>Amount</th>
    </thead>
    <tbody>
    <tr>
    <% @product.each do |product|%><!--|this| should match the product.name-->
